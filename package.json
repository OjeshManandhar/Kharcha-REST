{
  "name": "kharcha-rest",
  "version": "1.0.0",
  "description": "REST API for Kharcha using GraphQL and MongoDB",
  "main": "./src/index.ts",
  "scripts": {
    "build:js": "rm -rf dist && tsc",
    "start": "NODE_PATH=./src nodemon",
    "prod:js": "yarn build:js && NODE_PATH=./dist node ./dist",
    "prod": "NODE_PATH=./src ts-node ./src/index.ts",
    "test": "NODE_ENV=test NODE_PATH=./src mocha --check-leaks -r ts-node/register -r dotenv/config \"./test/**/*.test.ts\""
  },
  "keywords": [
    "REST",
    "API",
    "GraphQL",
    "MongoDB",
    "TypeScript",
    "ExpressJS"
  ],
  "author": "Ojesh Manandhar",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.18",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mocha": "^8.2.2",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.3.0",
    "@types/sinon": "^10.0.2",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "sinon": "^11.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "validator": "^13.6.0"
  }
}
